<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <tech.zenex.habits.views.InsightsCard
            android:id="@+id/streak_days"
            android:layout_width="0dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            app:insight_desc="13"
            app:insight_icon="@drawable/streak"
            app:insight_name="Streak Days" />

        <tech.zenex.habits.views.InsightsCard
            android:id="@+id/streak_start"
            android:layout_width="0dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            app:insight_desc="05 Dec, 2020"
            app:insight_icon="@drawable/flag"
            app:insight_name="Streak Start" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <tech.zenex.habits.views.InsightsCard
            android:id="@+id/check_ins"
            android:layout_width="0dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            app:insight_desc="25"
            app:insight_icon="@drawable/check_in"
            app:insight_name="Checkins" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <tech.zenex.habits.views.InsightsCard
            android:id="@+id/total_failures"
            android:layout_width="0dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            app:insight_desc="15"
            app:insight_icon="@drawable/failed"
            app:insight_name="Total Failures" />

        <tech.zenex.habits.views.InsightsCard
            android:id="@+id/journals"
            android:layout_width="0dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            app:insight_desc="34"
            app:insight_icon="@drawable/journal"
            app:insight_name="Journals" />
    </TableRow>

</TableLayout>