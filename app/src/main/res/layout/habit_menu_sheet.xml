            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                        android:id="@+id/journal_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:layout_column="1"
                        android:text="Journal"
                        android:textColor="@color/white"
                        app:backgroundTint="@color/color1"
                        android:layout_weight="1"
                        app:icon="@drawable/journal"
                        app:iconGravity="textStart"
                        app:iconTint="@color/white" />

                    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                        android:id="@+id/insights_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:layout_column="2"
                        android:text="Insights"
                        android:textColor="@color/white"
                        android:layout_weight="1"
                        app:icon="@drawable/charts_dark"
                        app:backgroundTint="@color/color4"
                        app:iconGravity="textStart"
                        app:iconTint="@color/white" />

                </TableRow>

                <TableRow>

                    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                        android:id="@+id/edit_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:layout_column="1"
                        android:text="Edit"
                        android:textColor="@color/white"
                        android:layout_weight="1"
                        app:icon="@drawable/edit_dark"
                        app:backgroundTint="@color/color12"
                        app:iconGravity="textStart"
                        app:iconTint="@color/white" />

                    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                        android:id="@+id/delete_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:layout_column="2"
                        android:text="Delete"
                        android:textColor="@color/white"
                        app:backgroundTint="@color/colorRed"
                        app:icon="@drawable/close_dark"
                        android:layout_weight="1"
                        app:iconGravity="textStart"
                        app:iconTint="@color/white" />
                </TableRow>
            </TableLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>